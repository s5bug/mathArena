---
const { session } = Astro.props;

import { getScoreServer } from "../lib/score_server.ts";
const score = getScoreServer(session)
---

<div
  id="score-box"
  class="server"
  style="position: absolute;
   top: 10px; 
   left: 10px; 
   width: 10vw; 
   height: 40px; 
   background: white; 
   padding: 5px; 
   border: 2px solid black;
   font-size: 1.2rem;
   text-align: center;
   display: flex;
   align-items: center;
   justify-content: center;
   font-weight: bold;
   border-radius: 5px;"
>
  Score: <span id="score-text">{score}</span>
</div>
